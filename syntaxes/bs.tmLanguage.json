{
	"information_for_contributors": [
		"This file has been converted from [INSERT REPO HERE]",
		"If you want to provide a fix or improvement, please create a pull request against the original repository.",
		"Once accepted there, we are happy to receive an update request."
	],
	"version": "0.1",
	"name": "Beanstalk",
	"scopeName": "source.bs",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#types"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#scenehead"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.bs",
					"match": "--[^\n]*"
				}
			]
		},
		"scenehead": {
			"begin": "^\\s*\\[",
			"end": "\\:\\s*$",
			"patterns": [
				{
					"name": "keyword.control.scene.bs",
					"match": "\\\\."
				}
			]
		},

		"types": {
			"patterns": [
				{
					"name": "storage.type.bs",
					"match": "\\b(?:Bool|Int|Float|String|Idx|Scene)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.bs",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.bs",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.bs",
					"match": "\\b(?:\\d+(?:\\.\\d*)?|\\.\\d+)(?:[eE][+-]?\\d+)?\\b"
				}
			]
		}
	}
}